# Application
APP_NAME="MEVN Stack App"
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Docker Ports
FRONTEND_PORT=3000
BACKEND_PORT=5000
MONGO_PORT=27017
REDIS_PORT=6379
MONGO_EXPRESS_PORT=8081
NGINX_PORT=80

# MongoDB Configuration
MONGO_URI=mongodb://mongodb:27017
MONGO_DATABASE=mevn_app
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_USERNAME=mevn_user
MONGO_PASSWORD=mevn_password

# MongoDB Express (Admin Interface)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_EXPIRE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_NAME="MEVN App"
SMTP_FROM_EMAIL=noreply@mevnapp.com

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Development
DEBUG=app:*
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Vue.js Development
VITE_API_URL=http://localhost:5000
VITE_APP_TITLE="MEVN Stack App"
VITE_APP_DESCRIPTION="Full-stack application with MongoDB, Express, Vue.js, and Node.js"

# Production (uncomment for production)
# NODE_ENV=production
# API_URL=https://your-api-domain.com
# APP_URL=https://your-app-domain.com
# CORS_ORIGIN=https://your-app-domain.com
# VITE_API_URL=https://your-api-domain.com